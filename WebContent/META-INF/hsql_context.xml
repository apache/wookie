<Context path="/wookie" reloadable="true">

        <Resource auth="Container"             
       		driverClass="org.hsqldb.jdbcDriver"
        	maxPoolSize="100" 
        	minPoolSize="3" 
        	initialPoolSize="5"
        	maxIdleTime="3600" 
        	idleConnectionTestPeriod="500"
        	acquireIncrement="3" 
        	name="jdbc/widgetdb" 
			jdbcUrl="jdbc:hsqldb:hsql://127.0.0.1:1702"
        	factory="org.apache.naming.factory.BeanFactory" 
			type="com.mchange.v2.c3p0.ComboPooledDataSource" 
        	user="java"
        	password="java"/>
	
</Context>

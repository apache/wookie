<Context path="/wookie" reloadable="true">
	
        <Realm className="org.apache.catalina.realm.JDBCRealm" 
               connectionURL="jdbc:mysql://localhost:3306/widgetdb?user=java&amp;password=java&amp;autoReconnect=true" 
               debug="99" 
               driverName="com.mysql.jdbc.Driver" 
               roleNameCol="role_name" 
               userCredCol="pwd" 
               userNameCol="user_name" 
               userRoleTable="user_role" 
               userTable="user"/>

        <Resource auth="Container" 
               driverClassName="com.mysql.jdbc.Driver" 
               maxActive="100" 
               maxIdle="30" 
               maxWait="10000" 
               name="jdbc/widgetdb" 
               password="java" 
               type="javax.sql.DataSource" 
               url="jdbc:mysql://localhost:3306/widgetdb?autoReconnect=true" 
               username="java"/>
	
</Context>

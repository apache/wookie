<Context path="/wookie" reloadable="true">

        <Resource auth="Container" 
        	driverClass="com.mysql.jdbc.Driver"
        	maxPoolSize="100" 
        	minPoolSize="3" 
        	initialPoolSize="5"
        	maxIdleTime="3600" 
        	idleConnectionTestPeriod="500"
        	acquireIncrement="3" 
        	name="jdbc/widgetdb" 
        	factory="org.apache.naming.factory.BeanFactory" 
			type="com.mchange.v2.c3p0.ComboPooledDataSource" 
			jdbcUrl="jdbc:mysql://localhost:3306/widgetdb"
        	user="java"
        	password="java"
        	 />

</Context>
